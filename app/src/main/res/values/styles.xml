<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="nLiveoDrawer" parent="nLiveo.Theme.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/custom_blue</item>
        <item name="colorPrimaryDark">@color/custom_bar_blue</item>
        <item name="colorAccent">@color/md_blue_500</item>
    </style>

    <style name="CustomDayTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/md_white</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/md_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
        <item name="fab_shadowColor">@color/md_grey_500</item>
        <item name="fab_colorNormal">@color/md_grey_200</item>
        <item name="fab_colorPressed">@color/md_grey_300</item>
        <item name="fab_colorRipple">@color/md_grey_800</item>
        <item name="android:textColor">@color/md_white</item>
    </style>
</resources>
